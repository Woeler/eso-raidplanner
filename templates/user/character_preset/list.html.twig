{% extends 'base.html.twig' %}
{% import 'macros/macros.html.twig' as macros %}
{% block title %}Character Presets{% endblock %}
{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="float-right">
                    {{ macros.linkbutton(
                        path('user_preset_create'),
                        'Create Character Preset',
                        'success',
                        'plus'
                    ) }}
                </div>
                {{ app.user.username }} - Character Presets
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Role</th>
                        <th>Sets</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for preset in presets %}
                        <tr>
                            <td style="vertical-align: middle" width="20%">{{ preset.name }}</td>
                            <td style="vertical-align: middle" width="20%"><img src="{{ asset(preset.getClassIcon()) }}"
                                                                                alt="{{ preset.getClassName() }}"
                                                                                title="{{ preset.getClassName() }}"
                                                                                width="30px"/>
                            </td>
                            <td style="vertical-align: middle" width="20%"><img src="{{ asset(preset.getRoleIcon()) }}"
                                                                                alt="{{ preset.getRoleName() }}"
                                                                                title="{{ preset.getRoleName() }}"
                                                                                width="30px"/>
                            </td>
                            <td style="vertical-align: middle" width="20%">
                                {% for set in preset.sets %}
                                    <a href="https://eso-hub.com/en/sets/{{ set.slug }}" target="_blank">{{ set.name }}</a>
                                    <br>
                                {% endfor %}
                            </td>
                            <td style="vertical-align: middle">
                                {{ macros.linkbutton(
                                    path('user_preset_update', {presetId: preset.id}),
                                    'Edit',
                                    'info',
                                    'edit'
                                ) }}
                                {{ macros.linkbutton(
                                    path('user_preset_delete', {presetId: preset.id}),
                                    'Delete',
                                    'danger',
                                    'trash'
                                ) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="https://eso-hub.com/css/external/tooltips.css" />
{% endblock %}

{% block javascripts %}
    <script src="https://eso-hub.com/js/external/tooltips.js"></script>
{% endblock %}
